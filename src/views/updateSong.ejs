<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div>
            <a href="/library/music">&larr; Back to library</a>
        </div>
        <h1>ADD SONG TO LIBRARY</h1>
        <div class="mt-3">
            <form action="/library/music/update" method="POST">
                <div class="mb-3 col-12 d-none">
                    <label class="form-label">Src</label>
                    <input type="text" class="form-control" name="id" value="<%= song.id %>">
                </div>
                <div class="row mb-2">
                    <div class="col-6">
                        <label class="form-label">Song name</label>
                        <input type="text" class="form-control" name="name" value="<%= song.name %>">
                      </div>
                      <div class="col-6">
                        <label class="form-label">Actor</label>
                        <input type="text" class="form-control" name="actor" value="<%= song.actor %>">
                    </div>
                </div>
                <div class="mb-3 col-12">
                    <label class="form-label">Src</label>
                    <input type="text" class="form-control" name="audiosrc" value="<%= song.src %>">
                </div>
                <div class="mb-3 col-12">
                    <label class="form-label">Image src</label>
                    <input type="text" class="form-control" name="imagesrc" value="<%= song.image %>">
                </div>
                <div class="mb-3 col-12">
                    <label class="form-label">Clasaify</label>
                    <input type="text" class="form-control" name="classify" value="<%= song.classify %>">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>
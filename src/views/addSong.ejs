<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
</head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<style>
    .contain {
        position: relative;
    }
    .modal-container {        
        position: absolute;
        top: 50px;
        left: 100px;
        width: 500px;
        height: 300px;
        background-color: #ccc;
    }
.my-modal {
    width: 100%;
    height: 100%;
}
.my-modal p {
    color: #fff;
}
.dp-none {
    display: none;
}
.btn {
    padding: 10px;
    text-decoration: none;
    color: #fff;
}
</style>
<script>
        $(document).ready(function(){
            $(".btn-xacnhan").click(function(){
                $(".modal-container").removeClass("dp-none")
            })
            $(".btn-olai").click(function() {
                $(".modal-container").addClass("dp-none")
            })
        })
</script>
<body>
    <div class="container contain">
        <div class="modal-container dp-none">
            <div class="my-modal">
                <p>ban co muon thoat hay khong</p>
                <button class="btn btn-olai">o lai</button>
                <a class="btn" href="/library/music">xac nhan</a>
            </div>
        </div>
        <div>
            <a href="/library/music">&larr; Back to library</a>
        </div>
        <h1>ADD SONG TO LIBRARY</h1>
        <div class="mt-3">
            <form action="/library/music/create" method="POST">
                <div class="row mb-2">
                    <div class="col-6">
                        <label class="form-label">Song name</label>
                        <input type="text" class="form-control" name="name">
                      </div>
                      <div class="col-6">
                        <label class="form-label">Actor</label>
                        <input type="text" class="form-control" name="actor">
                    </div>
                </div>
                <div class="mb-3 col-12">
                    <label class="form-label">Src</label>
                    <input type="text" class="form-control" name="audiosrc">
                </div>
                <div class="mb-3 col-12">
                    <label class="form-label">Image src</label>
                    <input type="text" class="form-control" name="imagesrc">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="button" class="btn btn-xacnhan">Cancel</button>
            </form>
            
        </div>
    </div>
</body>
</html>
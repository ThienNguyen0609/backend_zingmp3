<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/c638960eab.js" crossorigin="anonymous"></script>
    <title>Homepage</title>
</head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>


<style>
    * {
        padding: 0;
        margin: 0;
    }
    .prev-link {
        margin-bottom: 15px;
    }
    .token-container {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    .copy-token {
        position: absolute;
        display: flex;
        justify-content: center;
        align-items: center;
        right: 0;
        width: 40px;
        height: 37px;
    }
    .clipboard-icon {
        cursor: pointer;
        padding: 5px 7px 6px;
        border-radius: 10px;
    }
    .clipboard-icon:hover {
        background-color: #ccc;
    }
    .copy-element {
        position: absolute;
        background-color: #333;
        color: #fff;
        text-align: center;
        width: 50px;
        height: 30px;
        line-height: 30px;
        top: -28px;
        right: -4px;
    }
    .copy-element::before {
        content: "";
        position: absolute;
        bottom: -12px;
        right: 19px;
        border: 6px solid;
        border-color: #333 transparent transparent transparent;
    }
    .db-none {
        display: none;
    }
</style>

<script>
    $(document).ready(function () {
        $("#clipboard-icon").mouseover(function () {
            $("#copy").removeClass("db-none")
        });
        $("#clipboard-icon").mouseout(function () {
            $("#copy").addClass("db-none")
        });
        $("#clipboard-icon").click(function (e) {
            $("#copy").addClass("db-none")
            $("#copied").removeClass("db-none")
            setTimeout(()=>{
                $("#copied").addClass("db-none")
            }, 1000)
            $("#token").select()
            document.execCommand('copy');
        })
    });
</script>

<body>
    
    <div class="container">
        <div class="prev-link">
            <a href="/spotify/artist-form">Get new artist &rarr;</a>
        </div>
        <div class="token-container">
            <input id="token" type="text" class="form-control" name="token" value="<%=data.access_token%>">
            <div id="copy-token" class="copy-token"><i id="clipboard-icon" class="far fa-clipboard clipboard-icon"></i></div>
            <div id="copy" class="copy-element db-none">Copy</div>
            <div id="copied" class="copy-element db-none">Copied</div>
        </div>
    </div>
</body>

</html>